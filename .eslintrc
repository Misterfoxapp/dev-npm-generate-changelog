{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions":{
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
  },
  "rules": {
    "no-var":[2],
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "comma-dangle": [2, "never"],
    "comma-spacing": [
      2, {
        "before": false,
        "after": true
      }
    ],
    "complexity": [2, 9],
    "constructor-super": 0,
    "curly": 2,
    "eol-last": 0,
    "eqeqeq": 2,
    "generator-star-spacing": 2,
    "id-length": [
      2,
      {
        "min": 2,
        "properties": "always"
      }
    ],
    "indent": [
      2, 4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": { "var": 2, "let": 1, "const": 1 },
        "MemberExpression": 1,
        "FunctionDeclaration": {"parameters": "first"},
        "ArrayExpression": 1,
        "ObjectExpression": 1
      }
    ],
    "linebreak-style": [2, "unix"],
    "max-depth": [2, 5],
    "max-params": [2, 5],
    "max-statements": [2, 50],
    "new-cap": 1,
    "no-alert": 2,
    "no-cond-assign": [2, "always"],
    "no-console": [2, { "allow": ["warn", "error", "info"] }],
    "no-const-assign": 2,
    "no-labels": 0,
    "no-ex-assign": 2,
    "no-extra-semi": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 2,
    "no-nested-ternary": 2,
    "no-octal": 2,
    "no-plusplus": 2,
    "no-shadow": 2,
    "no-sparse-arrays": 2,
    "no-this-before-super": 0,
    "no-undef": 2,
    "no-underscore-dangle": 2,
    "no-unreachable": 2,
    "object-shorthand": [0],
    "one-var": [0, "always"],
    "prefer-const": 2,
    "quotes": [2, "single", { "allowTemplateLiterals": true }],
    "radix": 2,
    "require-yield": 2,
    "semi": [2, "never"],
    "valid-typeof": 2,
    "vars-on-top": 2,
    "yoda": [0, "never"]
  }
}
